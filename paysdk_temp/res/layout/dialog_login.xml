<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color" >

        <!-- 最外层layout -->

        <include
            android:id="@+id/title_bar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            layout="@layout/item_layout_title_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_bar"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_ten"
                    android:background="@drawable/login_edit_background"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <!-- 手机号码 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_ten"
                        android:layout_marginTop="@dimen/dp_ten"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp" >

                        <TextView
                            android:id="@+id/tv_phone_desc"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_five"
                            android:gravity="right"
                            android:text="+86 "
                            android:textColor="@color/color_tv_left"
                            android:textSize="@dimen/font_size_tv_left" />

                        <EditText
                            android:id="@+id/et_phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_five"
                            android:layout_marginRight="@dimen/dp_five"
                            android:layout_toRightOf="@id/tv_phone_desc"
                            android:background="@null"
                            android:hint="请填写手机号码"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textColorHint="@color/dark_color" />

                        <!--
                         <ImageButton
                        android:id="@+id/ib_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/clear_right_size"
                        android:background="@drawable/btclose_bgdown" />
                        -->
                    </LinearLayout>
                    <!-- 验证码 -->

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:layout_marginLeft="10.0dip"
                        android:background="@color/my_split_bottom" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_phone_desc"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_five"
                            android:layout_marginRight="@dimen/dp_five"
                            android:layout_toRightOf="@id/tv_phone_desc"
                            android:gravity="right"
                            android:inputType="phone"
                            android:text="验证码"
                            android:textColor="@color/color_tv_left"
                            android:textSize="@dimen/font_size_tv_left" />

                        <EditText
                            android:id="@+id/et_sms_code"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_five"
                            android:layout_marginRight="@dimen/dp_five"
                            android:layout_toRightOf="@id/tv_phone_desc"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="请填写验证码"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textColorHint="@color/dark_color" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <Button
                                android:id="@+id/bt_get_code"
                                style="@style/ib_get_code" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="20dp" >

                    <Button
                        android:id="@+id/bt_submit"
                        style="@style/bt_style"
                        android:text="下一步" />
                </LinearLayout>
            </LinearLayout> <!-- 最外层layout -->

        </LinearLayout>
    </RelativeLayout>

</ScrollView>